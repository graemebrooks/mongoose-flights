<%- include('../header.ejs') %>
    <h1>Flight List</h1>
    <table>
        <thead>
            <th>Airline</th>
            <th>Flight Number</th>
            <th>Departure Date</th>
        </thead>
        <tbody>
            <% flights.forEach(function(flight) { %>
                <tr>
                    <td><%= flight.airline %></td>
                    <td><%= flight.flightNo %></td>
                    <td><%= flight.departs %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/flights/new">Create New Flight</a>
</body>
</html>